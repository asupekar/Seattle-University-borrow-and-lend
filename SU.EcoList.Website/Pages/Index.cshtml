@page
@model IndexModel
@{

    ViewData["Title"] = "Home page";

}


@*Layout*@
<div class="format1">

    @*leftSide of page*@
    <div class="format2">

        <img src="~/img/Eagle.PNG" />

        <div class="boxed">

            <small> don't need something!</small>

        </div>

        <br> 

        <button class ="addMoreOrange" onclick="window.location.href = '/NewPost';">List An Item</button>

        <br>
        <br>

        <div class="boxed">

            <small> what do you need!</small>

        </div>

        <div class="searchBox">

            <form action="/SearchResult">

                <input class="searchInput" type="search" name="q" placeholder="Search">  
                
            </form>

        </div>

        <br>

        <select id="select a category">

            <option value="select a category">Select a category</option>
            <option value="Electronic">Electronic</option>
            <option value="Furniture">Furniture</option>
            <option value="Accessories">Accessories</option>
            <option value="Lighting">Lighting</option>

        </select>

        <br>
        <br>   

        <input class ="addMore"  type="button" value="My Account">

        <br>
        <br>

        <input class ="addMore"  type="button" value="My WishList">

        <br>
        <br>

        <input class ="addMore"  type="button" value="My Listing" onclick="window.location.href = '/MyListings';">

        <br>
        <br>

        <input class ="addMore"  type="button" value="My Claimed items">

    </div>


    @*Center of the Page*@
    <div style="float: left; width: 80%">

        @*Page Header*@ 
        <div class="boxed">

            @*Admin Center Button*@
            <div style=" float:right;width:10%">

                <input class="addMoreGray" type="button" value="Admin Center" onclick="window.location.href = '/AdminCenter';">

            </div>

            @*Community Metrics Banner*@
            <div class="boxed" style="margin-bottom: 20px; height: 180px">

                <script src="~/lib/javascript/Community_MB_JavaScript.js"></script>

                <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

                @*Pie Chart Space*@
                <div class="boxed-5px" style="width: 300px; height: 170px; margin-bottom: 1px">

                    @*Pie Chart Render*@
                    <div class="box" style="margin-right: 10px; height: 170px">

                        <div id="chartContainer1" style="width: 100%; height: 170px;display: inline-block;"></div>

                    </div>

                </div>

                @*Claim Count Space*@
                <div class="boxed-5px" style="width: 150px; height: 150px; margin-bottom: 10px">

                    <small style="font-size: xx-small; text-align: center">---- Items Claimed This Quarter ----</small>
                    <img src="~/img/CommunityTree.png" style="height: 150px" />

                </div>

                @*Line Graph Space*@
                <div class="boxed-5px" style="width: 300px; height: 170px; margin-bottom: 10px">

                    @*Line Graph Render*@
                    <div class="box" style="margin-right: 10px; height: 170px">

                        <div id="chartContainer2" style="width: 100%; height: 170px;display: inline-block;"></div>

                    </div>

                </div>
            </div>

            <h3>Recent uploaded Images</h3>

        </div>

        @*Items Cards Column*@
        <div class="card-columns" style="margin-top: 30px">

           @foreach (var product in Model.Products)

           {

               //Only json objects that have id value "Not" equals to "PaperWeight" will be shown
               @if (!product.Id.Equals("PaperWeight"))

              {

                <a href="/ItemOverView">

                    <div class="card">
                        <div class="card-img" style="background-image: url('@product.Image');"></div>

                        <div class="card-body">

                            <a class="card-title" style="background-color:white;color:green" asp-area="" asp-page="/ItemOverView"><small>@product.Title</small></a>

                            <input class="button-star" type="button"style="float: right;color:black;height:30px;width:30px"></input>

                        </div>

                    </div>

                </a>

              }

            }

            </div>

    </div>

</div>

<div style="clear:both"></div>