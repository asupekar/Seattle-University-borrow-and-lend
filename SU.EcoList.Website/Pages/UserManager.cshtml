@page
@model SU.EcoList.Website.Pages.UserManagerModel
@{
    ViewData["Title"] = "User Manager";
}

@*Layout*@
<div style="width:100%;margin:0 auto; padding: 0">

    @*leftSide of page*@
    <div style=" float:left;width:20%">

        <img src="~/img/Eagle.PNG" />

        @*List an Item Button*@
        <div class="boxed">
            <small> don't need something!</small>
        </div>

        <br>

        <button class="addMoreOrange" onclick="window.location.href = '/NewPost';">List An Item</button>

        <br>
        <br>

        @*Search Box Area*@
        <div class="boxed">
            <small> what do you need!</small>
        </div>

        <div class="searchBox">
            <form action="/SearchResult">
                <input class="searchInput" type="search" name="q" placeholder="Search">
            </form>
        </div>

        <br>

        @*Search Box Area*@ 
        <select id="select a category">
            <option value="select a category">Select a category</option>
            <option value="Electronic">Electronic</option>
            <option value="furniture">furniture</option>
            <option value="Accessories">Accessories</option>
            <option value="lighting">lighting</option>
        </select>

        <br>
        <br>

        @*Navigation Buttons*@
        <input type="button" style="background-color:forestgreen;color:white;width:150px;
        height:40px;" value="My Account">

        <br>
        <br>

        <input type="button" style="background-color:forestgreen;color:white;width:150px;
        height:40px;" value="My WishList">

        <br>
        <br>

        <input type="button" style="background-color:forestgreen;color:white;width:150px;
        height:40px;" value="My Listing" onclick="window.location.href = '/MyListings';">

        <br>
        <br>

        <input type="button" style="background-color:forestgreen;color:white;width:150px;
        height:40px;" value="My Claimed items">

    </div>

    @*Center of Page*@
    <div style="float: left;width: 75.5%">

        <h1 style="padding-bottom: 10px">User Manager</h1>

        @*Menu Banner (Large Left Side)*@ 
        <div class="menu-banner" style="height: 140px; width: 560px">

            <div class="boxed-5px" style="padding-top: 5px">
                <div class="menu-lable">Filter Listings</div>
            </div>

            @*Timeframe Filter*@
            <div class="boxed-5px" style="margin-left: 60px; padding-top: 3px">
                <img src="~/img/timeframe_clock.png" style="height: 27px; width: 27px" />
            </div>

            <div class="boxed-5px" style="padding-top: 5px">
                <input class="addSmall" type="button" value="1d">
                <input class="addSmall" type="button" value="1w">
                <input class="addSmall" type="button" value="1m">
                <input class="addSmall" type="button" value="1qrt">
                <input class="addSmall" type="button" value="1y">
                <input class="addSmall" type="button" value="3y">
            </div>

            <br />
            <br />

            @*Department & Sorying Filters*@
            <div class="boxed-5px" style="width: 450px; height: 35px">

                @*Department Filter Dropdown menu*@
                <div class="menu-lable-small" style="float: left; margin-top: 5px; margin-left: 5px">Department</div>

                <div class="select" style="width: 100px; float: left; margin-left: 10px">
                    <select name="slct" id="slct" onchange="location = this.value;">
                        <option>All</option>
                        <option value="1">AAH</option>
                        <option value="2">ACCT</option>
                        <option value="3">AEDT</option>
                        <option value="4">ASSW</option>
                        <option value="5">BIOL</option>
                        <option value="6">CEEGR</option>
                        <option value="7">CHEM</option>
                        <option value="8">CLBR</option>
                        <option value="9">CMJR</option>
                        <option value="10">COUN</option>
                        <option value="11">CRJS</option>
                        <option value="12">CSSE</option>
                        <option value="13">CSSP</option>
                        <option value="14">CUIN</option>
                        <option value="15">DCNC</option>
                        <option value="16">DIUS</option>
                        <option value="18">ECON</option>
                        <option value="19">EDUC</option>
                        <option value="20">ENES</option>
                        <option value="21">ENGL</option>
                        <option value="22">MATH</option>
                        <option value="_UserManager_State1">NURS</option>
                        <option value="17">OLNC</option>
                        <option value="17">PAAL</option>

                    </select>
                </div>

                @*Sort By Dropdown Menu*@
                <div class="menu-lable-small" style="float: left; margin-top: 5px; margin-left: 5px">Sort By</div>

                <div class="select" style="width: 100px; float: left; margin-left: 37px">
                    <select name="slct" id="slct">
                        <option>All</option>
                        <option value="1">Username</option>
                        <option value="2">Join Date</option>
                        <option value="3">Total Listings</option>
                        <option value="4">Active Listings</option>
                        <option value="5">Claimed Items</option>
                        <option value="6">Claims Relisted</option>
                    </select>
                </div>

            </div>

            @*Email All Users Button*@
            <div class="boxed-5px" style="width: 550px; height: 40px">

                <input class="addMore" type="button" value="Email" style="float: right; height: 30px; margin-right: 10px">

                <div class="menu-lable-small" style="float: right; margin-top: 5px; margin-right: 20px">Selected</div>

                <br />
                <br />

            </div>
        </div>

        @*Banner Menu (Small Right Side)*@
        <div class="menu-banner" style="height: 140px; width: 265px; float: right">

            @*Data Options Dropdown Menu*@
            <div class="boxed-5px">
                <div class="menu-lable">Data Options</div>
            </div>

            <div class="boxed-5px" style="width: 250px; height: 35px ">

                <div class="menu-lable-small" style="float: left; margin-top: 5px; margin-left: 5px">Results</div>

                <div class="select" style="width: 100px; float: left; margin-left: 10px">

                    <select name="slct" id="slct">

                        <option>100+ results per page</option>
                        <option value="1">50 results per page</option>
                        <option value="2">25 results per page</option>
                        <option value="3">10 results per page</option>

                    </select>
                </div>
            </div>

            @*Data Export Buttons*@
            <div class="boxed-5px" style="width: 250px; height: 35px; margin-top: 18px">

                <div class="menu-lable-small" style="float: left; margin-top: 5px; margin-left: 5px">Export</div>

                <input class="addMoreOrange" type="button" value="CSV" style="float: right; height: 30px; width: 50px" />

                <input class="addMore" type="button" value="XLSX" style="float: right; height: 30px; width: 50px; margin-right: 10px">

            </div>

        </div>

        @*User Cards Column*@
        <div class="box" style="width: 836px; height: 100%; margin-top: 163px;">

            <div class="card-columns" style="column-count: 1">

                @foreach (var user in Model.Users)
                {
                    <a href="/ItemOverView">
                        <div class="card" style="width: 52rem" ;>
                            <div class="card-body" style="background-color: white; width: 100%; height: 250px">
                                <div class="card-img" style="background-image: url('img/@user.Url'); width: 20%; height: 90%; float: left;">
                                    <div class="boxed" style="width: 50rem; height: 13rem">
                                        <div class="boxed" style="width: 24rem; height: 13rem; float: left">
                                            <a class="card-title" style="min-width: 300px;margin-left: 200px; float: left; background-color:white;color:black" asp-area="" asp-page="/ItemOverView"><medium>@user.Name</medium></a>
                                            <a class="card-title" style="max-width: 300px;margin-left: 200px; float: left; background-color:white;color:black" asp-area="" asp-page="/ItemOverView"><small>📄 Items Listed: </small><small>@user.Listings</small></a>
                                            <a class="card-title" style="max-width: 300px;margin-left: 200px; float: left; background-color:white;color:black" asp-area="" asp-page="/ItemOverView"><small>📑 Active Listings: </small><small>@user.ActiveListings</small></a>
                                            <a class="card-title" style="max-width: 300px;margin-left: 200px; float: left; background-color:white;color:black" asp-area="" asp-page="/ItemOverView"><small>☝ Claims: </small><small>@user.Claims</small></a>
                                            <a class="card-title" style="max-width: 300px;margin-left: 200px; float: left; background-color:white;color:black" asp-area="" asp-page="/ItemOverView"><small>❗❗ Claims Relisted: </small><small>@user.ClaimsRelisted</small></a>
                                            <a class="card-title" style="max-width: 300px;margin-left: 200px; float: left; background-color:white;color:black" asp-area="" asp-page="/ItemOverView"><small>⛔ Suspension: </small><small>@user.Suspension</small></a>
                                        </div>
                                        <div class="boxed" style="width: 20rem; height: 13rem; float: right">
                                            <div class="boxed" style="max-width: 150px; margin-left: 0px; float: right; background-color: white; color: black; margin-top: 0px; margin-right: 10px">
                                                <a class="card-title" style="max-width: 300px;margin-left: 0px; float: right; background-color:white;color:black; margin-top: 0px; margin-right: 10px" asp-area="" asp-page="/ItemOverView"><small>🏢 Department: </small><small>@user.Dept </small></a>
                                                <a class="card-title" style="max-width: 300px;margin-left: 0px; float: right; background-color:white;color:black; margin-top: 0px; margin-right: 10px" asp-area="" asp-page="/ItemOverView"><small>Date Joined: </small><small>@user.JoinDate</small></a>
                                            </div>
                                            <input class="addMore" type="button" value="Email" style="float: right; height: 30px; margin-right: 10px; margin-top: 60px; margin-left: 200px" onclick="window.location.href = 'mailto:bruizdesomocurcio@seattleu.edu';">
                                            <input class="addMoreRed" type="button" value="Suspend" style="float: right; margin-right: 10px; margin-top: 10px" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }

                @*Spacer Before footer*@
                <div class="box" style="width: 836px; height: 100px">


                </div>
            </div>
        </div>
    </div>
</div> 