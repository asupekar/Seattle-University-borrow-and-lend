@page
@model SU.EcoList.Website.Pages.NewPostModel
@{
    ViewData["Title"] = "NewPost";
}

@section Scripts {

    <script src="~/js/site.js" type="text/javascript"></script>

}
@*leftSide of page*@

<div class="format1" />

<div class="format2">

    <img src="~/img/Eagle.PNG" />

    <div class="boxed">

        <small> don't need something!</small>

    </div>

    <br>

    <div class="boxed">

        <small> what do you need!</small>

    </div>

    <select id="select a category">

        <option value="select a category">Select a category</option>
        <option value="Electronic">Electronic</option>
        <option value="Furniture">Furniture</option>
        <option value="Accessories">Accessories</option>
        <option value="Lighting">Lighting</option>

    </select>

    <br>
    <br>

    <input class="addMore" type="button" value="My Account">

    <br>
    <br>

    <input class="addMore" type="button" value="My WishList">

    <br>
    <br>

    <input class="addMore" type="button" value="My Listing" onclick="window.location.href = '/MyListings';">

    <br>
    <br>

    <input class="addMore" type="button" value="My Claimed items">

</div>



@*Center side of the Page*@

<h1><strong>New Post</strong></h1>

<div class="cc1" />

<body>

    <form method="post" class="mt-3" enctype="multipart/form-data">

        <div class="form-group row">

            <div class="col-sm-10">

                <strong>*Post title:<br></strong>

                <input asp-for="Title" type="text" name="Title" placeholder="Title: ">

                <br>
                <br>

                <strong>*Upload an image:</strong>

                <br>

                <div class="photoUpload1">
                    <img id="blah" class="photoUpload" src="~/img/placeholder.png" alt="your image" />
                </div>

                <div class="custom-file">

                    <div class="locationUpload">

                        <input asp-for="Photo" class="custom-file-input form-control" onchange="readURL(this);">

                        <label class="custom-file-label" style="width:300px; margin-top:-18%">Click here to upload photo</label>

                        <div class="preferredTime">

                            <label for="appt"><strong>Select a preferred time:</strong></label>

                            <br />

                            <input type="time" id="appt" name="appt">

                        </div>

                        <label for="Location"><strong>Pick up location:</strong></label>

                        <br>

                        <select id="Location">

                            <option value="Pickup">Select a pickup location</option>
                            <option value="HILB">Vi Hilbert hall(HILB)</option>
                            <option value="STCN">Student Center(STCN)</option>
                            <option value="ENGR">Bannan Enginerring Building(ENGR)</option>
                            <option value="PIGT">Pigott Auditorium(PIGT)</option>

                        </select>

                        <br>
                        <br>

                        <label for="Description"><strong>*Description:</strong></label>
                        <br>
                        <textarea id="Description" rows="5" cols="50"></textarea>

                        <button class="addMore2" type="submit">Submit</button>

                    </div>
                </div>
            </div>
        </div>

    </form>



    <form method="post" class="mt-3" enctype="multipart/form-data">

        <div class="form-group row">

            <div class="col-sm-10">

                <div class="custom-file">

                    <div class="locationUpload">

                        <button class="CancelLocation"; onclick="window.location.href = '/index';">

                            Cancel

                        </button>
                    </div>
                </div>
            </div>
        </div>

    </form>
  </body>